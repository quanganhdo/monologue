!!! 1.1
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title monologue
    %link{:rel => 'stylesheet', :type => 'text/css', :media => 'screen', :href => 'css/style.css'}
    %script{:type => 'text/javascript', :src => 'js/jquery-1.3.2.min.js'}
    %script{:type => 'text/javascript', :src => 'js/counter.js'}
    %script{:type => 'text/javascript', :src => 'js/emo.js'}
    
  %body
    #wrapper
      %h1 
        %a{:href => '/', :title => 'Back to homepage'} monologue
        
      #postbox
        %form{:method => 'POST', :action => '/new'}
          %span#count.normal 140
          
          %label{:for => 'content'} What have you done today?
          %textarea{:name => 'content', :id => 'content', :rows => 3, :cols => 60}
          %br
          
          %label How do they make you feel?
          #emopicker
            - for emo in EMO
              %img.emo{:alt => emo, :src => "/img/emo/#{emo}.png", :class => emo.eql?('misdoubt') ? 'selected' : '', :id => emo}
          
          %input{:type => 'hidden', :name => 'emo', :id => 'emo', :value => 'misdoubt'}
          
          %input{:type => 'submit', :id => 'submit', :value => 'Submit'}
          %a{:href => '/home', :title => 'View all entries'} or view all entries